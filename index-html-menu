      <div id="orderForm" class="order-form hidden">
        <h3 class="font-semibold text-gray-800 text-lg mb-4">üìù
          Order Details</h3>
        <form id="completeOrderForm" action="https://formspree.io/f/xovlbjkz" method="POST" class="space-y-4">
          <!-- Hidden field to include selected dishes --><input type="hidden" name="selected_dishes" id="selectedDishesInput">
          <input type="hidden" name="total_amount" id="totalAmountInput">
          <input type="hidden" name="total_calories" id="totalCaloriesInput">

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="guestName" class="block text-sm font-medium text-gray-700 mb-1">Guest Name
