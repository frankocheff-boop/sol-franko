  <!-- Floating
Cart Summary --><div id="floatingCart" class="cart-summary hidden">
    <h4 class="font-semibold text-gray-900 mb-3">üõí
      Your Order</h4>
    <div id="cartItems"></div>
    <div class="border-t border-gray-200 pt-3 mt-3">
      <div class="flex justify-between font-semibold">
        <span>Total:</span>
        <span id="cartTotal">$0</span>
      </div>
      <div class="flex justify-between text-sm text-gray-600">
        <span>Calories:</span>
        <span id="cartCalories">0 cal</span>
      </div>
    </div>
    <button onclick="showSection('order', document.querySelector('[onclick*=\'order\']'))" class="submit-order-btn mt-3">
      Review
      Order
    </button>
  </div>

  <footer class="bg-white border-t border-gray-200 py-8 mt-12">
    <div class="container mx-auto px-6 text-center">
      <p class="text-gray-600 mb-2">¬© 2024 Verano Estate - Chef
        Franko</p>
      <p class="text-sm text-gray-500">An unforgettable culinary experience
        in every dish</p>
    </div>
  </footer>

  <script>
    // Order
    // management
    let selectedDishes = [];
    let totalAmount = 0;
    let totalCalories = 0;

    function showSection(sectionId, button) {
      // Hide
      // all sections
      const sections = document.querySelectorAll('.section-content');
      sections.forEach(section => {
        section.classList.add('hidden');
      });

      // Remove
      // active class from all buttons
      const buttons = document.querySelectorAll('.nav-btn');
      buttons.forEach(btn => {
        btn.classList.remove('active');
      });

      // Show
      // selected section and activate button
      document.getElementById(sectionId).classList.remove('hidden');
      button.classList.add('active');
    }

    function showBreakfastDay(day, button) {
      // Hide
      // all breakfast days
      const breakfastDays = document.querySelectorAll('.breakfast-day');
      breakfastDays.forEach(dayElement => {
        dayElement.classList.add('hidden');
      });

      // Remove
      // active class from all day buttons in breakfast section
      const dayButtons = document.querySelectorAll('#breakfast .day-btn');
      dayButtons.forEach(btn => {
        btn.classList.remove('active');
      });

      // Show
      // selected day and activate button
      document.getElementById('breakfast-' + day).classList.remove('hidden');
      button.classList.add('active');
    }

    function showLunchDay(day, button) {
      // Hide
      // all lunch days
      const lunchDays = document.querySelectorAll('.lunch-day');
      lunchDays.forEach(dayElement => {
        dayElement.classList.add('hidden');
      });

      // Remove
      // active class from all lunch day buttons
      const dayButtons = document.querySelectorAll('#lunch .day-btn');
      dayButtons.forEach(btn => {
        btn.classList.remove('active');
      });

      // Show
      // selected day and activate button
      document.getElementById('lunch-' + day).classList.remove('hidden');
      button.classList.add('active');
    }

    function showDinnerDay(day, button) {
      // Hide
      // all dinner days
      const dinnerDays = document.querySelectorAll('.dinner-day');
      dinnerDays.forEach(dayElement => {
        dayElement.classList.add('hidden');
      });

      // Remove
      // active class from all dinner day buttons
      const dayButtons = document.querySelectorAll('#dinner .day-btn');
      dayButtons.forEach(btn => {
        btn.classList.remove('active');
      });

      // Show
      // selected day and activate button
      document.getElementById('dinner-' + day).classList.remove('hidden');
      button.classList.add('active');
    }

    function toggleDishSelection(button, dishName, calories, price) {
      const dishCard = button.closest('.dish-card');
      const dishId = dishCard.dataset.dish;

      // Check
      // if dish is already selected
      const existingIndex = selectedDishes.findIndex(dish => dish.id === dishId);

      if (existingIndex > -1) {
        //
        // Remove dish
        selectedDishes.splice(existingIndex, 1);
        dishCard.classList.remove('selected');
        button.classList.remove('selected');
        button.textContent = `Select This Dish`;
        totalAmount -= price;
        totalCalories -= calories;
      } else {
        // Add
        // dish
        selectedDishes.push({
          id: dishId,
          name: dishName,
          calories: calories,
          price: price
        });
        dishCard.classList.add('selected');
        button.classList.add('selected');
        button.textContent = '‚úì Selected';
        totalAmount += price;
        totalCalories += calories;
      }

      updateCartDisplay();
      updateOrderSummary();
    }

    function updateCartDisplay() {
      const floatingCart = document.getElementById('floatingCart');
      const cartItems = document.getElementById('cartItems');
      const cartTotal = document.getElementById('cartTotal');
      const cartCalories = document.getElementById('cartCalories');

      if (selectedDishes.length === 0) {
        floatingCart.classList.add('hidden');
        return;
      }

      floatingCart.classList.remove('hidden');

      // Update
      // cart items
      cartItems.innerHTML = selectedDishes.map(dish => `
               <div class="cart-item">
                   <div>
                       <div class="text-sm font-medium">${dish.name.split(' -')[0]}</div>
                       <div class="text-xs text-gray-500">${dish.calories} cal</div>
                   </div>
               </div>
           `).join('');

      cartTotal.textContent = `${selectedDishes.length} dishes`;
      cartCalories.textContent = `${totalCalories} cal`;
    }

    function updateOrderSummary() {
      const selectedDishesDiv = document.getElementById('selectedDishes');
      const orderTotal = document.getElementById('orderTotal');
      const orderForm = document.getElementById('orderForm');
      const totalAmountSpan = document.getElementById('totalAmount');
      const totalCaloriesSpan = document.getElementById('totalCalories');

      if (selectedDishes.length === 0) {
        selectedDishesDiv.innerHTML = '<p class="text-gray-500 text-center py-8">No dishes selected yet. Browse our menu and select your favorites!</p>';
        orderTotal.classList.add('hidden');
        orderForm.classList.add('hidden');
        return;
      }

      // Show
      // selected dishes
      selectedDishesDiv.innerHTML = selectedDishes.map(dish => `
               <div class="flex justify-between items-center py-3 border-b border-gray-200">
                   <div>
                       <h4 class="font-medium">${dish.name}</h4>
                   </div>
                   <div class="text-right">
                       <button onclick="removeDishFromOrder('${dish.id}')" class="text-red-500 text-sm hover:text-red-700">Remove</button>
                   </div>
              </div>
          `).join('');

      // Show
      // totals
      orderTotal.classList.remove('hidden');
      orderForm.classList.remove('hidden');
      totalAmountSpan.textContent = `${selectedDishes.length} dishes`;
      totalCaloriesSpan.textContent = `${totalCalories} cal`;

      // Update
      // hidden form fields
      document.getElementById('selectedDishesInput').value = selectedDishes.map(dish => dish.name).join(', ');
      document.getElementById('totalAmountInput').value = `${selectedDishes.length} dishes`;
      document.getElementById('totalCaloriesInput').value = `${totalCalories} calories`;
    }

    function removeDishFromOrder(dishId) {
      const dishIndex = selectedDishes.findIndex(dish => dish.id === dishId);
      if (dishIndex > -1) {
        const dish = selectedDishes[dishIndex];
        totalAmount -= dish.price;
        totalCalories -= dish.calories;
        selectedDishes.splice(dishIndex, 1);

        //
        // Update UI
        const dishCard = document.querySelector(`[data-dish="${dishId}"]`);
        if (dishCard) {
          dishCard.classList.remove('selected');
          const button = dishCard.querySelector('.select-btn');
          if (button) {
            button.classList.remove('selected');
            button.textContent = 'Select This Dish';
          }
        }

        updateCartDisplay();
        updateOrderSummary();
      }
    }

    // Handle
    // order form submission
    document.getElementById('completeOrderForm').addEventListener('submit',
      function (e) {
        // Update
        // hidden fields before submission
        document.getElementById('selectedDishesInput').value = selectedDishes.map(dish => dish.name).join(', ');
        document.getElementById('totalAmountInput').value = `${selectedDishes.length} dishes`;
        document.getElementById('totalCaloriesInput').value = `${totalCalories} calories`;

        //
        // Generate order ID for display
        const orderId = 'VE' + Date.now().toString().slice(-6);

        // Show
        // confirmation immediately
        document.getElementById('orderIdDisplay').textContent = orderId;
        document.getElementById('orderConfirmation').classList.remove('hidden');
        this.style.display = 'none';

        // Reset
        // after 10 seconds
        setTimeout(() => {
          //
          // Reset form and selections
          selectedDishes = [];
          totalAmount = 0;
          totalCalories = 0;

          //
          // Reset UI
          document.querySelectorAll('.dish-card.selected').forEach(card => {
            card.classList.remove('selected');
            const button = card.querySelector('.select-btn.selected');
            if (button) {
              button.classList.remove('selected');
              button.textContent = 'Select This Dish';
            }
          });

          updateCartDisplay();
          updateOrderSummary();

          //
          // Hide confirmation and show form again
          document.getElementById('orderConfirmation').classList.add('hidden');
          this.style.display = 'block';
          this.reset();

          // Go
          // back to breakfast section
          showSection('breakfast', document.querySelector('.nav-btn'));
        }, 10000);
      });

    // Initialize
    // page
    document.addEventListener('DOMContentLoaded', function () {
      // Show
      // breakfast section by default
      showSection('breakfast', document.querySelector('.nav-btn.active'));

      // Show
      // Monday breakfast by default
      showBreakfastDay('monday', document.querySelector('#breakfast .day-btn.active'));

      // Show
      // Monday lunch by default when lunch section is opened
      showLunchDay('monday', document.querySelector('#lunch .day-btn.active'));

      // Show
      // Monday dinner by default when dinner section is opened
      showDinnerDay('monday', document.querySelector('#dinner .day-btn.active'));
    });
  </script>
</body>

</html>

